<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orlly.sketchplay"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.orlly.sketchplay.MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.orlly.sketchplay.GettingStarted"
            android:label="@string/getting_started_a_bar"
            android:parentActivityName="com.orrly.sketchplay.MainMenuActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.orlly.sketchplay.OptionsMenu"
            android:label="@string/options_label"
            android:parentActivityName="com.orrly.sketchplay.MainMenuActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.orlly.sketchplay.ImageAdjustmentMenu"
            android:label="@string/render_image"
            android:parentActivityName="com.orrly.sketchplay.ImageSelectorMenu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.orlly.sketchplay.ImageSelectorMenu"
            android:label="@string/image_select"
            android:parentActivityName="com.orrly.sketchplay.MainMenuActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.orlly.sketchplay.Game"
            android:label="@string/app_name"
            android:parentActivityName="com.orrly.sketchplay.ImageAdjustmentMenu"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>